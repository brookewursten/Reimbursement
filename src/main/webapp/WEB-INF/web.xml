<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <display-name>Reimbursement</display-name>
    <welcome-file-list>
        <welcome-file>./index.html</welcome-file>
            </welcome-file-list>
    <context-param>
        <param-name>application</param-name>
  	    <param-value>Reimbursment</param-value>
    </context-param>
    <servlet>
        <servlet-name>views</servlet-name>
  	    <servlet-class>com.reimbursement.servlet.ViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>data</servlet-name>
  	    <servlet-class>com.reimbursement.servlet.DataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
  	    <servlet-name>views</servlet-name>
  	    <url-pattern>*.page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
  	    <servlet-name>data</servlet-name>
  	    <url-pattern>*.json</url-pattern>
    </servlet-mapping>

    <error-page>
  	    <error-code>404</error-code>
  	    <location>./error.html</location>
    </error-page>
    <error-page>
  	    <exception-type>java.sql.SQLException</exception-type>
  	    <location>./error.html</location>
    </error-page>



</web-app>